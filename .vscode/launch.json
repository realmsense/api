    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run", "start:dev"
            ],
            // "preLaunchTask": "tsc: build - tsconfig.json",
            // "preLaunchTask": "npm: compile",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
            ],
            "console": "integratedTerminal"
        }
    ]
}